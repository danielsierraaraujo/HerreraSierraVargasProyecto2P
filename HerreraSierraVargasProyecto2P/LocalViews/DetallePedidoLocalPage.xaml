<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:HerreraSierraVargasProyecto2P.LocalViewModels"
    x:Class="HerreraSierraVargasProyecto2P.LocalViews.DetallePedidoLocalPage"
    Title="Detalle del Pedido Local"
    x:Name="MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Entry Placeholder="Cantidad" Keyboard="Numeric" Text="{Binding Nuevo.Cantidad}" />
            <Entry Placeholder="Precio unitario" Keyboard="Numeric" Text="{Binding Nuevo.PrecioUnitario}" />
            <Button Text="Agregar Detalle" Command="{Binding AgregarCommand}" />

            <CollectionView ItemsSource="{Binding Items}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="LightGray" Padding="10" Margin="0,5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Id}" />
                                <Label Text="{Binding Cantidad}" />
                                <Label Text="{Binding PrecioUnitario, StringFormat='${0:F2}'}" />
                                <Button Text="Eliminar"
                                        Command="{Binding BindingContext.EliminarCommand, Source={x:Reference MainPage}}"
                                        CommandParameter="{Binding .}" TextColor="Red" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
