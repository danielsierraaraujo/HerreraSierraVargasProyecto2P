<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:HerreraSierraVargasProyecto2P.LocalViewModels"
    x:Class="HerreraSierraVargasProyecto2P.LocalViews.LogsPage"
    Title="Registros de Logs">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Historial de acciones" FontSize="20" FontAttributes="Bold" />

        <CollectionView ItemsSource="{Binding Logs}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray" Margin="0,5">
                        <Label Text="{Binding}" LineBreakMode="WordWrap" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Borrar logs" Command="{Binding BorrarLogsCommand}" TextColor="Red" />
    </VerticalStackLayout>
</ContentPage>
